            var idKhachhang=$('#idKhachhang').val();
            var tenKhachHang=$('#tenKhachHang').val();
            var idSanPham=$('#idSanPham').val();
            var tenHang=$('#tenHang').val();
            var donViTinh=$('#donViTinh').val();
            var soLuong=$('#soLuong').val(); 
